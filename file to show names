#include <stdio.h>
#include <stdlib.h>

#define MAX_LENGTH 100

void writeSentence() {
    FILE *file = fopen("data.txt", "w");
    if (file == NULL) {
        perror("Error opening file for writing");
        return;
    }
    char sentence[MAX_LENGTH + 1];
    printf("Enter a sentence (up to 100 characters): ");
    fgets(sentence, MAX_LENGTH + 1, stdin);
    fprintf(file, "%s", sentence);
    fclose(file);
    printf("Sentence written to data.txt.\n");
}

void readContent() {
    FILE *file = fopen("data.txt", "r");
    if (file == NULL) {
        perror("Error opening file for reading");
        return;
    }
    char ch;
    printf("Content of data.txt:\n");
    while ((ch = fgetc(file)) != EOF) {
        putchar(ch);
    }
    fclose(file);
    printf("\n");
}

void appendSentence() {
    FILE *file = fopen("data.txt", "a");
    if (file == NULL) {
        perror("Error opening file for appending");
        return;
    }
    
    char sentence[MAX_LENGTH + 1];
    printf("Enter another sentence to append (up to 100 characters): ");
    fgets(sentence, MAX_LENGTH + 1, stdin);
    fputs(sentence, file);
    fclose(file);
}

int main () {
    writeSentence();
    readContent();
    appendSentence();
    readContent();

    return 0;
}
